{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("tkf\\instagramapihelper\\assetbundles\\instagramapihelper\\InstagramApiHelperAsset") %}

{{ forms.textField({
    label: 'Instagram API Token',
    instructions: 'Enter your Token here.',
    id: 'instagramApiToken',
    name: 'instagramApiToken',
    value: settings['instagramApiToken']})
}}

{{ forms.textField({
    label: 'Instagram User ID',
    instructions: 'Enter your User ID here.',
    id: 'instagramApiUserId',
    name: 'instagramApiUserId',
    value: settings['instagramApiUserId']})
}}

{{ forms.textField({
    label: 'Base Uri',
    instructions: 'Base Uri for endpoints',
    id: 'baseUri',
    name: 'baseUri',
    value: settings['baseUri']})
}}
